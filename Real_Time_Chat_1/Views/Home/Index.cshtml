@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <span>Name:</span><br />
            <input type="text" id="txtUser" /><br />
            <span>Message:</span><br />
            <textarea rows="10" cols="50" id="txtMsg"></textarea><br />
